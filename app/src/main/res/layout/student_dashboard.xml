<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StudentDashboardActivity">

    <!-- Titre de la page -->
    <TextView
        android:id="@+id/tvStudentDashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tableau de bord de l'Étudiant"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bouton pour voir le profil de l'étudiant -->
    <Button
        android:id="@+id/btnViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voir mon profil"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/tvStudentDashboardTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bouton pour voir les absences de l'étudiant -->
    <Button
        android:id="@+id/btnViewAbsences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voir mes absences"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnViewProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bouton pour se déconnecter -->
    <Button
        android:id="@+id/btnLogoutStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Se déconnecter"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnViewAbsences"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
